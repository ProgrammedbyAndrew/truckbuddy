    <script>
        // Mock Vendor Data
        const vendors = [
            { id: 1, name: "Mike’s Hauler", service: "Truck Only", price: 40, distance: "2.3 miles", img: "https://source.unsplash.com/300x150/?red-pickup-truck", bio: "Reliable Ford F-150, perfect for quick moves.", reviews: ["Great service! - 5/5", "On time, no hassle. - 4/5"] },
            { id: 2, name: "Jenny & Truck", service: "Truck + Light Loading", price: 55, distance: "3.1 miles", img: "https://source.unsplash.com/300x150/?woman-pickup-truck", bio: "I’ll help with small boxes and light lifting.", reviews: ["Super friendly! - 5/5"] },
            { id: 3, name: "Big Joe’s Crew", service: "Truck + Heavy Loading", price: 70, distance: "4.5 miles", img: "https://source.unsplash.com/300x150/?man-lifting-boxes", bio: "Heavy-duty truck, I lift anything.", reviews: ["Strong and fast! - 5/5"] },
            { id: 4, name: "The Duo", service: "2 People", price: 80, distance: "5.2 miles", img: "https://source.unsplash.com/300x150/?two-workers-truck", bio: "Two of us to make it quick and easy.", reviews: ["Great teamwork! - 4/5"] },
            { id: 5, name: "Triple Threat", service: "3 People", price: 100, distance: "6.0 miles", img: "https://source.unsplash.com/300x150/?group-workers", bio: "Three strong guys, no job too big.", reviews: ["Amazing service! - 5/5"] },
            { id: 6, name: "Full Squad", service: "4+ People", price: 120, distance: "7.8 miles", img: "https://source.unsplash.com/300x150/?large-crew-truck", bio: "Full team for massive moves.", reviews: ["Best crew ever! - 5/5"] },
            { id: 7, name: "Sam’s Pickup", service: "Truck Only", price: 45, distance: "1.8 miles", img: "https://source.unsplash.com/300x150/?black-pickup-truck", bio: "Quick and affordable transport.", reviews: ["Very reliable! - 4/5"] },
            { id: 8, name: "Tina’s Team", service: "2 People", price: 85, distance: "4.0 miles", img: "https://source.unsplash.com/300x150/?workers-loading-truck", bio: "We’ll handle your move with care.", reviews: ["Careful and efficient! - 5/5"] }
        ];

        let currentFilter = "All";
        let selectedVendor = null;

        // Page Navigation
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
            document.querySelectorAll('nav ul li a').forEach(link => link.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            document.querySelector(`nav ul li a[onclick="showPage('${pageId}')"]`).classList.add('active');
            window.scrollTo(0, 0);
        }

        // Search Function
        function search() {
            const zipcode = document.getElementById("zipcode").value;
            if (zipcode) {
                document.getElementById("listings").style.display = "block";
                document.getElementById("listings").scrollIntoView({ behavior: "smooth" });
                displayListings();
            } else {
                alert("Please enter a zip code!");
            }
        }

        // Filter Listings
        function filterListings(service) {
            currentFilter = service;
            document.querySelectorAll(".option").forEach(opt => opt.classList.remove("active"));
            event.target.classList.add("active");
            displayListings();
        }

        // Display Listings
        function displayListings() {
            const grid = document.getElementById("listings-grid");
            grid.innerHTML = "";
            const filteredVendors = currentFilter === "All" ? vendors : vendors.filter(v => v.service === currentFilter);
            filteredVendors.forEach(vendor => {
                const div = document.createElement("div");
                div.className = "listing";
                div.innerHTML = `
                    <img src="${vendor.img}" alt="${vendor.name}">
                    <h3>${vendor.name}</h3>
                    <p>${vendor.service}</p>
                    <p>${vendor.price}/hr | ${vendor.distance}</p>
                    <button onclick="viewVendor(${vendor.id})">View Details</button>
                `;
                grid.appendChild(div);
            });
        }

        // View Vendor Details
        function viewVendor(vendorId) {
            selectedVendor = vendors.find(v => v.id === vendorId);
            const content = document.getElementById("vendor-details-content");
            content.innerHTML = `
                <img src="${selectedVendor.img}" alt="${selectedVendor.name}">
                <h2>${selectedVendor.name}</h2>
                <p>${selectedVendor.service}</p>
                <p>$${selectedVendor.price}/hr | ${selectedVendor.distance}</p>
                <p>${selectedVendor.bio}</p>
                <div class="reviews">
                    <h3>Reviews</h3>
                    ${selectedVendor.reviews.map(review => `<div class="review">${review}</div>`).join('')}
                </div>
                <button onclick="startBooking(${vendorId})">Book Now</button>
            `;
            showPage('vendor-details');
        }

        // Start Booking
        function startBooking(vendorId) {
            selectedVendor = vendors.find(v => v.id === vendorId);
            document.getElementById("booking-vendor").innerHTML = `<h3>Booking with ${selectedVendor.name}</h3>`;
            updatePrice();
            showPage('booking');
        }

        // Update Price
        function updatePrice() {
            let basePrice = selectedVendor.price;
            const addOns = document.getElementById("add-ons").value;
            if (addOns === "insurance") basePrice += 10;
            if (addOns === "extra-helper") basePrice += 20;
            document.getElementById("price-display").textContent = `Total: $${basePrice}/hr`;
        }

        // Confirm Booking
        function confirmBooking() {
            const modal = document.getElementById("modal");
            modal.style.display = "flex";
            modal.querySelector("p").textContent = `Your truck and crew (${selectedVendor.name}) are on the way.`;
        }

        // Close Modal
        function closeModal() {
            document.getElementById("modal").style.display = "none";
            showPage('home');
        }

        // Event Listeners for Dynamic Pricing
        document.getElementById("add-ons")?.addEventListener("change", updatePrice);

        // Initial Load
        displayListings();
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
</body>
</html>
